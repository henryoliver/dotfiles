{
    // General
    "codeLens.enable": true,

    "suggest.snippetIndicator": "",
    "suggest.lowPrioritySourceLimit": 10,
    "suggest.removeDuplicateItems": true,
    "suggest.completionItemKindLabels": {
        "keyword": "",
        "variable": "",
        "value": "",
        "operator": "",
        "function": "",
        "reference": "渚",
        "constant": "",
        "method": "",
        "struct": "פּ",
        "class": "",
        "interface": "",
        "text": "",
        "enum": "",
        "enumMember": "",
        "module": "",
        "color": "",
        "property": "",
        "field": "料",
        "unit": "",
        "event": "鬒",
        "file": "",
        "folder": "",
        "snippet": "",
        "typeParameter": "",
        "default": ""
    },

    "diagnostic.hintSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",

    "diagnostic.virtualTextPrefix": "",
    "diagnostic.virtualTextLineSeparator": "↩",

    // Prettier
    "prettier.tabWidth": 4,
    "prettier.printWidth": 160,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.stylelintIntegration": true,

    // HTML
    "html.autoClosingTags": true,
    "html.format.wrapLineLength": 160,

    // Python
    "python.formatting.provider": "yapf",

    // Tsserver (JavaScript)
    "javascript.format.enabled": true,

    // Vetur (Vue.js)
    "vetur.format.options.tabSize": 4,
    "vetur.format.styleInitialIndent": true,
    "vetur.format.scriptInitialIndent": true,

    // Spell Checker
    "cSpell.enabledLanguageIds": ["markdown", "plaintext"],

    // Markdownlint
    "markdownlint.onOpen": false,
    "markdownlint.onChange": false,
    "markdownlint.onSave": true,
    "markdownlint.config": {
        "default": true,
        "line_length": false
    },

    // Explorer
    "explorer.width": 40,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    }
}
